<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="KWLCodes_HMSProject.Maui.DownloadVideoPage"
             Title="DownloadVideoPage">
    <VerticalStackLayout Padding="10">
        <Label Text="Download and Provide Feedback" FontSize="24" HorizontalOptions="Center" />

        <Button Text="Download Video Submissions" Clicked="OnDownloadVideosClicked" />

        <Editor x:Name="FeedbackEditor" Placeholder="Enter feedback here" />

        <Button Text="Submit Feedback" Clicked="OnSubmitFeedbackClicked" />
    </VerticalStackLayout>

</ContentPage>
    