<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="KWLCodes_HMSProject.Maui.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:KWLCodes_HMSProject.Maui"
    Shell.FlyoutBehavior="Disabled"
    Title="KWLCodes_HMSProject.Maui">

    <ShellContent
        Title="Landing Page"
        ContentTemplate="{DataTemplate local:Pages.LandingPage}"
        Route="LandingPage" />

    <ShellContent
        Title="View Assignments"
        ContentTemplate="{DataTemplate local:Pages.ViewAssignments}"
        Route="ViewAssignments" />

    <ShellContent
        Title="Upload Video"
        ContentTemplate="{DataTemplate local:Pages.UploadVideo}"
        Route="UploadVideo" />

    <ShellContent
        Title="View Video Feedback"
        ContentTemplate="{DataTemplate local:Pages.ViewVideoFeedback}"
        Route="ViewVideoFeedback" />
</Shell>
