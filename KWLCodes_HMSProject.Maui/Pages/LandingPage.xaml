<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="KWLCodes_HMSProject.Maui.Pages.LandingPage">
    <StackLayout>
        <Label Text="Welcome to HMS App" 
               HorizontalOptions="Center" 
               VerticalOptions="CenterAndExpand" />

        <Button Text="Login" 
                Clicked="OnLoginClicked" 
                HorizontalOptions="Center" 
                VerticalOptions="CenterAndExpand" />
        <Button Text="User Admin" 
                Clicked="OnUserAdminClicked" 
                HorizontalOptions="Center" 
                VerticalOptions="CenterAndExpand" />
        <Button Text="List Assignments" 
                Clicked="OnListAssignmentsClicked" 
                HorizontalOptions="Center" 
                VerticalOptions="CenterAndExpand" />
        <Button Text="Create Assignment" 
                Clicked="OnCreateAssignmentClicked" 
                HorizontalOptions="Center" 
                VerticalOptions="CenterAndExpand" />
    </StackLayout>
</ContentPage>
