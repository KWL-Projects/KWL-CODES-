<?xml version="1.0" encoding="UTF-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="KWLCodes_HMSProject.Maui.Pages.UploadVideo"
             Title="View Assignments"
             BackgroundColor="White">

    <VerticalStackLayout Padding="40" Spacing="30"
                         VerticalOptions="Center"
                         HorizontalOptions="Center">

        <Label Text="Upload a Video" 
               FontSize="32" 
               TextColor="#4b004b"
               HorizontalOptions="Center"
               FontAttributes="Bold"/>

        <Button Text="Select Video" 
                Clicked="OnSelectVideoClicked" 
                BackgroundColor="#800080"
                TextColor="White"
                FontAttributes="Bold"
                CornerRadius="15"
                Padding="10"
                HorizontalOptions="FillAndExpand"/>

        <Button Text="Record Video" 
                Clicked="OnRecordVideoClicked"
                BackgroundColor="#800080"
                TextColor="White"
                FontAttributes="Bold"
                CornerRadius="15"
                Padding="10"
                HorizontalOptions="FillAndExpand"/>

        <Label x:Name="StatusLabel"
               Text=""
               FontSize="14"
               TextColor="Red"
               HorizontalOptions="Center" />

    </VerticalStackLayout>
</ContentPage>
