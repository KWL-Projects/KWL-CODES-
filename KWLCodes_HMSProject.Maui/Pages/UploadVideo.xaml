<?xml version="1.0" encoding="UTF-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="KWLCodes_HMSProject.Maui.Pages.UploadVideo"
             Title="Upload Video">

    <StackLayout Padding="20">
        <Label Text="Upload a Video" FontSize="24" HorizontalOptions="Center" />
        <Button Text="Select Video" Clicked="OnSelectVideoClicked" 
                Margin="0,10,0,0"/>
        
        <Button Text="Record Video" Clicked="OnRecordVideoClicked"
                Margin="0,20,0,0"/>
        
        <Label x:Name="StatusLabel" Text="" FontSize="14" TextColor="Red" HorizontalOptions="Center" />
    </StackLayout>
</ContentPage>
